<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Credit card number" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/editText7"
        android:layout_alignStart="@+id/editText7" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/editText9"
        android:layout_toEndOf="@+id/editText9"
        android:layout_alignBottom="@+id/editText9" />

    <EditText
        android:id="@+id/editText14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name of the card"
        android:layout_below="@+id/editText9"
        android:layout_alignStart="@+id/editText9" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:text="Proceed to pay"
        android:textAllCaps="false"
        android:layout_below="@+id/editText14"
        android:layout_alignEnd="@+id/editText11" />

</RelativeLayout>